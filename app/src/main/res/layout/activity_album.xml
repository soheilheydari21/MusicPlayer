<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Less.AlbumActivity">

    <com.rishabhharit.roundedimageview.RoundedImageView
        android:id="@+id/imageViewCoverAlbum"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCorners="all"
        app:srcCompat="@drawable/coverrrl" />

    <TextView
        android:id="@+id/textAlbumName"
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:layout_marginTop="135dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="Album name"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toEndOf="@+id/imageViewCoverAlbum"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textArtistAlbum"
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="Artist name"
        android:textAlignment="center"
        android:textColor="#A3A3A3"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toEndOf="@+id/imageViewCoverAlbum"
        app:layout_constraintTop_toBottomOf="@+id/textAlbumName" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="405dp"
        android:layout_height="377dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_play"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCoverAlbum">

        <ListView
            android:id="@+id/listViewAlbum"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>