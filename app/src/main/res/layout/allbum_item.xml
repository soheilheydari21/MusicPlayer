<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutAlbum"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/row_background"
    android:paddingLeft="5dp"
    android:visibility="visible">


    <com.rishabhharit.roundedimageview.RoundedImageView
        android:id="@+id/imageViewCoverAllbum3"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp"
        android:scaleType="centerCrop"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCorners="all"
        app:srcCompat="@drawable/coverrrl" />

    <com.rishabhharit.roundedimageview.RoundedImageView
        android:id="@+id/imageViewCoverAllbum2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:scaleType="centerCrop"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewCoverAllbum3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCorners="all"
        app:srcCompat="@drawable/coverrrl" />

    <com.rishabhharit.roundedimageview.RoundedImageView
        android:id="@+id/imageViewCoverAllbum"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        app:civ_border_color="#00d6b3"
        app:civ_border_width="3dp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewCoverAllbum3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCorners="all"
        app:srcCompat="@drawable/coverrrl" />

    <TextView
        android:id="@+id/textViewTitleAllbum"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="Album Name"
        android:textAlignment="center"
        android:textColor="#FDFDFD"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCoverAllbum3" />

    <TextView
        android:id="@+id/textViewArtistAllbum"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="Artist"
        android:textAlignment="center"
        android:textColor="#BFBBBB"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleAllbum" />


</androidx.constraintlayout.widget.ConstraintLayout>